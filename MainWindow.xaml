<Window x:Class="LecturerClaimsSystem2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LecturerClaimsSystem2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid x:Name="MainGrid"   >

        <Border Background="#FF252526" CornerRadius="10" Width="320" Height="380" 
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="20" HorizontalAlignment="Stretch">
                <TextBlock Text="Lecturer Claims System" Foreground="White" FontSize="20" 
                           FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="Username" Foreground="White" Margin="0,10,0,5"/>
                <TextBox x:Name="UsernameTextBox" Height="30" Background="#FF3E3E42" 
                         Foreground="White" CaretBrush="White" BorderThickness="0"/>

                <TextBlock Text="Password" Foreground="White" Margin="0,20,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Background="#FF3E3E42" 
                             Foreground="White" CaretBrush="White" BorderThickness="0"/>

                <TextBlock Text="Role" Foreground="White" Margin="0,20,0,5"/>
                <ComboBox x:Name="RoleComboBox" Height="30" Background="#FF2D2D30" BorderBrush="#FF007ACC" 
                        Padding="5"  FontWeight="SemiBold" Foreground="White" BorderThickness="2">
                    <ComboBoxItem Content="Lecturer"/>
                    <ComboBoxItem Content="Programme Coordinator"/>
                    <ComboBoxItem Content="Academic Manager"/>
                </ComboBox>

                <Button x:Name="LoginButton" Content="Login" Height="40" Background="#FF007ACC" 
                        Foreground="White" FontWeight="Bold" Margin="0,30,0,0" BorderThickness="0" 
                        Click="LoginButton_Click"/>

                <TextBlock x:Name="ErrorText" Foreground="Red" Margin="0,10,0,0" 
                           TextWrapping="Wrap" Visibility="Collapsed"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
