<UserControl x:Class="LecturerClaimsSystem2.LecturerDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#FF252526" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Lecturer Dashboard" Foreground="White" 
                           FontSize="18" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock x:Name="WelcomeText" Grid.Column="1" Text="Submit and track your claims" Foreground="LightGray" 
                           Margin="20,0,0,0" VerticalAlignment="Center"/>
                <Button Grid.Column="2" Content="Logout" Background="#FF007ACC" Foreground="White" 
                        Padding="10,5" Click="LogoutButton_Click"/>
            </Grid>
        </Border>

        <TabControl Grid.Row="1" Background="Transparent">
            <TabItem Header="Submit Claim">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="Submit New Claim" Foreground="White" FontSize="16" 
                                   FontWeight="Bold" Margin="0,0,0,20"/>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Hours Worked:" Foreground="White" Margin="0,0,10,10"/>
                            <TextBox x:Name="HoursTextBox" Grid.Row="0" Grid.Column="1" Height="30" Background="#FF3E3E42" 
                                     Foreground="White" Margin="0,0,0,10" Text="0"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Hourly Rate:" Foreground="White" Margin="0,0,10,10"/>
                            <TextBox x:Name="RateTextBox" Grid.Row="1" Grid.Column="1" Height="30" Background="#FF3E3E42" 
                                     Foreground="White" Margin="0,0,0,10" Text="0"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Additional Notes:" Foreground="White" Margin="0,0,10,10"/>
                            <TextBox x:Name="NotesTextBox" Grid.Row="2" Grid.Column="1" Height="60" Background="#FF3E3E42" Foreground="White" 
                                     AcceptsReturn="True" Margin="0,0,0,10" TextWrapping="Wrap"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Supporting Documents:" Foreground="White" Margin="0,0,10,10"/>
                            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="Upload" Background="#FF007ACC" Foreground="White" Padding="10,5" Margin="0,0,10,0" Click="UploadButton_Click"/>
                                <TextBlock x:Name="UploadedFileName" Text="No file selected" Foreground="LightGray" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Current Status:" Foreground="White" Margin="0,20,10,10"/>
                            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Vertical" Margin="0,20,0,10">
                                <ProgressBar x:Name="StatusProgressBar" Height="10" Minimum="0" Maximum="100" Value="0" 
                                           Background="#FF3E3E42" Foreground="#FF007ACC"/>
                                <TextBlock x:Name="StatusTextBlock" Text="Ready to submit" Foreground="LightGray" 
                                         Margin="0,5,0,0" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <Button Grid.Row="5" Grid.ColumnSpan="2" Content="Submit Claim" 
                                    Background="#FF007ACC" Foreground="White" Height="40" FontWeight="Bold" 
                                    HorizontalAlignment="Right" Margin="0,10,0,20" Width="120" Click="SubmitClaim_Click"/>

                            <Border Grid.Row="6" Grid.ColumnSpan="2" Background="#FF1E1E1E" CornerRadius="5" Padding="10" Margin="0,5,0,0">
                                <TextBlock x:Name="ClaimStatusText"
                                           Text="Claim Status: No claims submitted"
                                           Foreground="White"
                                           TextWrapping="Wrap"/>
                            </Border>

                            <Border Grid.Row="7" Grid.ColumnSpan="2" Background="#FF1E1E1E" CornerRadius="5" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="Latest Claim Status" Foreground="White" FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock x:Name="LatestClaimStatus" Text="No claims submitted yet" Foreground="LightGray" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="My Claims">
                <StackPanel Margin="20">
                    <TextBlock Text="My Claim History" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

                    <ListView x:Name="MyClaimsListView" Background="#FF1E1E1E" Foreground="White" BorderThickness="0" Height="300">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" Width="120" DisplayMemberBinding="{Binding Date, StringFormat=dd/MM/yyyy HH:mm}"/>
                                <GridViewColumn Header="Hours" Width="60" DisplayMemberBinding="{Binding Hours}"/>
                                <GridViewColumn Header="Rate" Width="80" DisplayMemberBinding="{Binding Rate, StringFormat=C}"/>
                                <GridViewColumn Header="Total" Width="80" DisplayMemberBinding="{Binding Total, StringFormat=C}"/>
                                <GridViewColumn Header="Status" Width="100">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Status}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Approved By" Width="120" DisplayMemberBinding="{Binding ApprovedBy}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
